<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModularApp.Modules.Views"
             xmlns:viewModels="clr-namespace:ModularApp.Modules.ViewModels"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" x:Class="ModularApp.Modules.Views.OutputView"
             mc:Ignorable="d" d:DesignHeight="150" d:DesignWidth="600"
             d:DataContext="{dxmvvm:ViewModelSource viewModels:OutputViewModel}">
    <Grid>
        <dx:DXTabControl TabContentCacheMode="CacheAllTabs" >
            <dx:DXTabControl.View>
                <dx:TabControlMultiLineView HeaderLocation="Bottom" HideButtonShowMode="InActiveTab"/>
            </dx:DXTabControl.View>
            <dx:DXTabItem Header="1">
                <Grid Background="Transparent"/>
            </dx:DXTabItem>
            <dx:DXTabItem Header="2">
                <Grid Background="Transparent"/>
            </dx:DXTabItem>
        </dx:DXTabControl>

    </Grid>
</UserControl>
