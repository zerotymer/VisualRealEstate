<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm" 
             xmlns:comp="clr-namespace:VisualRealtor.MVVM.Components"
             xmlns:dxprg="http://schemas.devexpress.com/winfx/2008/xaml/propertygrid" x:Class="VisualRealtor.MVVM.Components.PropertiesView"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <comp:PropertiesViewModel/>
    </UserControl.DataContext>
    <dx:BackgroundPanel>
        <DockPanel>
            <ComboBox ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" DockPanel.Dock="Top" BorderThickness="0" DisplayMemberPath="Name"/>
            <dxprg:PropertyGridControl x:Name="pGrid" BorderThickness="0"/>
        </DockPanel>
    </dx:BackgroundPanel>
</UserControl>
